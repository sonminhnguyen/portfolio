{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "./built/**/*"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "src/data/database.js",
    "src/components/RequireAuth.tsx"
  ],
  // "compilerOptions": {
  //   "lib": [
  //     "es5",
  //     "es6",
  //     "dom",
  //     "dom.iterable"
  //   ]
  // }
}